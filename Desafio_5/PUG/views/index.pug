doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Desafio 5 - PUG
    body 
        h2  Cargar Producto
        form(action="/" method="post") 
            div 
                label(for="title") Nombre del Producto:
                input( type="text" name="title" id="title")
            div 
                label(for="price") Precio del Producto:
                input( type="number" name="price" id="price")
            div 
                label(for="thumbnail") URL de la imagen:
                input( type="url" name="thumbnail" id="thumbnail")
            div 
                input(type="submit" value="Guardar Producto")
        
        h2 Productos 
        if (products.length > 0)
            div
                table
                    tr 
                        th Producto
                        th Precio
                        th Imagen
                    for prod in list
                    tr 
                        td= prod.title
                        td = prod.price 
                        td = prod.thumbnail
        else if (products.length == 0)
                h3 No se encontraron productos


