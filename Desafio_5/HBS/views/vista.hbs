 {{#if(products.length > 0)}}
        <div class="table-responsive">
            <table class="table table-dark">
                <tr> <th>Producto</th> <th>Precio</th> <th>Imagen</th></tr>
                {{#each products}} 
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td> 
                        <img src={{this.thumbnail}} alt="" width="50">
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
    {{#else if (products.length == 0) }}
        <h3 class="alert alert-danger">No se encontraron productos</h1>
    {{/if}}
    